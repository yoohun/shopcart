.imgScroll{
  width: 100%;
}
.slide-image{
  width: 100%;
}
swiper{
  height: 200rpx;
}
.swiper image {
  width: 100%;
  height: auto;
}
.product{
  width: 100%;
  padding: 10rpx 6rpx;
  box-sizing: border-box;
}
.product .title{
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
  word-wrap:break-word; 
  word-break:normal;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
}
.product .price{
  color: red;
  font-size: 32rpx;
  margin: 20rpx 0
}
.productDetail .title{
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 16rpx;
}
.bottomRow .left{
  height: 90rpx;
  width: 120rpx;
  line-height: 90rpx;
  text-align: center;
  color: rgb(129, 129, 129);
  float: left
}
.bottomRow .borderRight{
  border-right: 1rpx solid rgb(204, 204, 204)
}
.bottomRow .right{
  flex: 1;
  color: white;
  text-align: center;
  height: 90rpx;
}
.bottomRow .right .item{
  width: 50%;
  float: left;
  height: 100%;
  line-height: 90rpx;
}
.intoCar{
  background: green
}
.buyIt{
background: red
}
.bottomRow .left .iconfont{
  color: rgb(173, 173, 173);
  font-size: 40rpx
}
.buyList{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  font-size: 26rpx;
  z-index: 10;
  background: white;
  height: 90rpx;
  display: flex;
}
.choseCount{
  position: fixed;
  left: 0;
  right: 0;
  bottom:-435rpx;
  width: 100%;
  background: white;
  z-index: 99
}
.count{
  width: 100%;
  border-bottom: 1rpx solid rgb(172, 172, 172);
  border-top: 1rpx solid rgb(172, 172, 172);
  line-height: 50rpx;
  padding: 20rpx 20rpx;
  margin-bottom: 20rpx;
  font-size: 34rpx;
  box-sizing: border-box;
  display: flex
}
.count text{
  line-height: 90rpx;
  flex: 1;
}

.addPlues{
  border: 1rpx solid rgb(180, 180, 180);
  border-radius: 8rpx;
  margin: auto;
}
.count .addPlues text{
  line-height: 60rpx;
  display: inline-block;
  padding: 0 20rpx;
  border-right: 1rpx solid rgb(180, 180, 180);
}
.count .addPlues .lock{
  color: rgb(207, 207, 207);
}
.addPlues text:nth-child(3){
  border-right: none
}
.sureBtn{
  color: white;
  border-radius: 0
}
.burDes{
  display: flex;
  padding: 0 20rpx 20rpx;
  box-sizing: border-box
}
.burDes .iconfont{
  font-size: 44rpx;
  color: red;
  margin-top: 4rpx;
}
.buyImg{
  width: 140rpx;
  height: 140rpx;
  background: red;
  border-radius: 10rpx;
  margin-top: -40rpx;
  margin-left: 20rpx;
  margin-right: 40rpx;
  overflow: hidden
}
.buyImg image{
  width: 140rpx;
  height: 140rpx;
}
.buyPrice{
  flex: 1
}
.buyPrice text{
  display: block;
  font-size: 30rpx;
  color: black;
  line-height: 42rpx;
}
.buyPrice text:first-child{
  color: red;
  font-size: 26rpx;
}